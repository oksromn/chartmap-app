      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mb-3">
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            placeholder: t('activerecord.attributes.user.email'),
                            class: "form-control"
          %>
        </div>

        <div class="form-group mb-3">
          <%= f.password_field :password,
                               autocomplete: "current-password",
                               placeholder: t('activerecord.attributes.user.password'),
                               class: "form-control"
          %>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
          <div class="form-check">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, t('devise.labels.remember_me'), class: "form-check-label" %>
            <% end %>
          </div>

          <div class="text-right">
            <%- if devise_mapping.recoverable? %>
              <small>
                <%= link_to t('devise.labels.forgot_password'), new_password_path(resource_name) %>
              </small>
            <% end %>
          </div>
        </div>

        <%= f.submit t("devise.labels.sign_in"), class: "btn btn-lg btn-block btn-primary" %>
