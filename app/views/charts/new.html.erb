<div class="container mt-5">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <%= form_with model: @chart, html: { "data-turbo": false } do |f| %>
        <div class="form-group mb-4">
          <%= f.label :title, t("charts.form.title") %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group mb-4">
          <%= f.label :chart_type, t("charts.form.type") %>
          <%= f.select :chart_type, Chart::TYPES, {}, { class: "form-control" } %>
        </div>
        <%= f.submit t("charts.form.submit"), class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
