<section class="position-relative py-5">
  <div class="container">
    <div class="row align-items-center text-center text-md-start">
      <div class="col-12 col-md-6">
        <%= image_tag "words-section.png", class: "img-fluid mw-130 float-end mb-6 mb-md-0" %>
      </div>

      <div class="col-12 col-md-6">
        <h1 class="display-3">
          <%= t('words.index.header1') %>
          <%= t('words.index.header2') %>
        </h1>

        <p class="text-muted mb-0">
          <%= t('words.index.header_description') %>
        </p>

        <div class="mt-4">
          <%= link_to t('words.buttons.create'), new_word_path, class: "btn btn-primary shadow lift" %>
        </div>
      </div>
    </div>
  </div>
</section>

<hr>

<div class="row content-list-body mt-5">
  <% @words.each do |word| %>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <div class="dropdown card-options">
            <button class="btn-options" type="button" id="options-<%= word.id %>" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="bi bi-three-dots-vertical"></i>
            </button>
            <ul class="dropdown-menu" aria-labelledby="options-<%= word.id %>">
              <li><%= link_to t('words.buttons.edit'), edit_word_path(word), class: "dropdown-item" %></li>
              <li><%= link_to t('words.buttons.destroy'), word_path(word), data: { "turbo-method": :delete }, class: "dropdown-item text-danger" %></li>
            </ul>
          </div>

          <div class="card-title">
            <%= link_to word_path(word), class: "text-primary" do %>
              <h5><%= word.title %></h5>
            <% end %>
            <span><%= t('words.index.last_update', time: time_ago_in_words(word.updated_at)) %></span>
          </div>

          <p class="card-text">
            <%= truncate(word.description, length: 200) %>
          </p>

          <% word.tag_list.each do |tag| %>
            <span class="badge rounded-pill bg-primary"><%= tag %></span>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
